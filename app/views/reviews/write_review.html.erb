<%= provide(:title, 'Write Review') %>
<h1>Write Review for <%= @review.name %> (<%= @review.m_category %>) </h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @review, url: {action: "create"}, :method => :POST do |f| %>
      <%= f.label :rating %>
      <%= f.number_field :rating, class: 'rating', min: 0, max: 10%>

      <%= f.label :review %>
      <%= f.text_area :review, class: 'form-control' %>

      <%= f.hidden_field :name, :value => @review.name %>
      <%= f.hidden_field :m_category, :value => @review.m_category %>
      <%= f.hidden_field :link, :value => @review.link %>
      <%= f.hidden_field :user_id, :value => @review.user_id %>

      <%= f.submit "Post Review", class: "btn btn-primary"  %>
    <% end %>
  </div>
</div>
