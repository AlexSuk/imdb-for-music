<h3>Discuss <%= @artist.name %></h3>
<table>
  <tr>
    <th>Post Title </th>
    <th>Date Created </th>
    <th>Created by </th>
  </tr>

<p>
  <%= link_to("Create a new post", new_post_path(mbid: params[:format])) %>
</p>
<% @posts.each do |post| %>
<tr>
    <td><%= link_to post.title, post_path(id: post.id, mbid: @artist.id) %></td>
    <td><%= post.created_at %></td>
    <td><%= User.find_by_id(post.user_id).name %></td>
</tr>

<% end %>


<%= will_paginate @posts %>
</table>
