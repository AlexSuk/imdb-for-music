<h3>Discuss <%= @recording.artist["name"] %></h3>
<table>
  <tr>
    <th>Post Title </th>
    <th>Date Created </th>
    <th>Created by </th>
  </tr>
<p>
  <%= link_to("Create a new post", new_post_path(mbid: @recording.artist["id"])) %>
</p>
<% @posts.each do |post| %>
  <tr>
    <td><%= link_to(post.title, post.url) %></td>
    <td><%= post.created_at %></tr>
    <td><%= User.find_by_id(post.user_id).name %></td>
  </tr>
<% end %>
<%= will_paginate @posts %>
</table>
