<% provide(:title, @artist.name) %>
<h1><%= @artist.name %></h1>
<%= javascript_include_tag "galleria.classic.min.js" %>
<%= javascript_include_tag "artist" %>

<div class="galleria">
<%art_images = @artist.images%>
<%if art_images.count > 0 %>
  <% art_images.each do |image_url| %>
    <img src="<%=image_url%>"></img>
  <%end%>
<%else %>
  <p> No images found for <%=@artist.name %></p>
<%end%>
</div>

<% if @artist.type == "Group" %>
<%= render 'artist_members' %>
<%end%>

<%= render 'artist_releases' %>

<%= render 'artist_posts' %>
