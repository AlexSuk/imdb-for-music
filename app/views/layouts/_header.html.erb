<div id="site_header">
  <h1> <%= link_to "MeloDB", root_path %><h1>
    <%= form_tag(search_path(:q), method: :get) do %>
      <%= text_field_tag :q, params[:name], placeholder: "Search Music", id: "searchbar", class: "left" %>
      <%= submit_tag "Submit", id: "searchbutton" %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
          <% if !logged_in? %>
            <li><%= link_to "Log In",   login_path %></li>
          <%end%>
          <% if logged_in? %>
            <li><%= link_to "Log Out", logout_path, method: "delete" %></li>
          <%end%>
      </ul>
    </nav>
</div>
