<div id="site_header">
  <!--<h1> <%= link_to "MeloDB", root_path %><h1>-->
    <%= link_to image_tag("transparent-logo.png", id: "logo", border: 0), root_path, id: "logo-link"%>
    <%= form_tag(search_path(:q), method: :get) do %>
      <%= text_field_tag :q, params[:name], placeholder: "Search Music", id: "searchbar", class: "left" %>
      <%= select_tag "filter", "<option>Any</option><option>Artist</option><option>Release</option><option>Recording</option>".html_safe %>
      <%= submit_tag "Search", id: "searchbutton" %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
          <% if !logged_in? %>
            <li><%= link_to "Facebook",   '/auth/facebook' %></li>
            <li><%= link_to "Log In",   login_path %></li>
          <%end%>
          <% if logged_in? %>
          <li><%= link_to "Profile", current_user %></li>
            <li><%= link_to "Log Out", logout_path, method: "delete" %></li>
          <%end%>
      </ul>
    </nav>
</div>
