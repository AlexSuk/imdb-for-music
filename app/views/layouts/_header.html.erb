<div id="site_header">
  <h1> MeloDB <h1>
    <%= form_tag(search_path(:q), method: :get) do %>
      <%= text_field_tag :q, params[:name], placeholder: "Search Music", id: "searchbar", class: "left" %>
      <%= submit_tag "Submit", id: "searchbutton" %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Log In",   login_path %></li>
      </ul>
    </nav>
</div>
