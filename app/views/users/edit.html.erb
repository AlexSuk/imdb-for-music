<%= provide(:title, 'Edit User') %>
<h1>Edit User</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %> <!-- display error messages on site -->
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password if !@user.provider%>
      <%= f.password_field :password, class: 'form-control' if !@user.provider%>

      <%= f.label :password_confirmation, "Confirm your password:" if !@user.provider%>
      <%= f.password_field :password_confirmation, class: 'form-control' if !@user.provider%>
      <%= f.submit "Edit my account", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
