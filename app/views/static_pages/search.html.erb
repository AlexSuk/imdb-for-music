<% provide(:title, "Results for #{@query}") %>
<h1>A Search</h1>
<p> Results for "<%= @query %>"</p>

<h3>Artists</h3>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Type</th>
  </tr>

  <% @artists.each do |artist| %>
    <tr>
      <td>
        <%= link_to artist["name"], artist_path(artist["id"])%>
      </td>
      <td><%= artist["disambiguation"] %></td>
      <td><%= artist["type"] %></td>
    </tr>
  <%end %>
</table>

<h3>Albums</h3>

<table>
  <tr>
    <th>Name</th>
    <th>Release Date</th>
    <th>Artist</th>
    <th>Thumbnail</th>
    <th>Type</th>
  </tr>

  <% @albums.each do |album| %>
    <tr>
      <td><%= album["title"] %></td>
      <td><%=
      #release_group = MusicBrainz::ReleaseGroup.find(album[:id])
      #release_group.first_release_date
      %>
      </td>
      <td>
        <%= album["artist-credit"].first["artist"]["name"] %>
      </td>
      <td><%= 'todo' %></td>
      <td><%= album["type"] %></td>
    </tr>
  <%end %>
</table>
