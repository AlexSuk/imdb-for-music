<% if @albums.count > 0 %>
  <h3>Albums</h3>
  <table>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Type</th>
    </tr>

    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album["title"], release_group_path(album["id"]) %></td>
        <td>
          <%= link_to album["artist-credit"].first["artist"]["name"], artist_path(album["artist-credit"].first["artist"]["id"])  %>
        </td>
        <td><%= album["primary-type"] %></td>
      </tr>
    <%end %>
  </table>
<%end %>
