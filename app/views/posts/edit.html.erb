<h1>Edit Post</h1>
<%= form_for(@post, :url => update_post_path, method: :patch, format: :html) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field(:mbid, :value => params[:mbid]) %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body, placeholder: "Write a new post" %>
  </div>
  <div class="actions">
    <%= f.submit "Save post" %>
  </div>
<% end %>

<%= link_to 'Back', _back_url %>
