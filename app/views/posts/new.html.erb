<h1>New Post</h1>

<section class='color1'>
<%= form_for(@post, format: :html) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field(:mbid, :value => params[:mbid]) %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_area :title, placeholder: "Write a title" %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, placeholder: "Write a new post", :rows => 10 %>
  </div>
  <div class="actions">
    <%= f.submit "Save post" %>
  </div>
<% end %>
</section>
<%= link_to "Back to artist", artist_path(params[:mbid]) %>
